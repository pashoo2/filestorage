{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "target": "ES6",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "incremental": true,
    "lib": ["dom"],
    "paths": {
      "@root/*": ["./src/*"],
    }
  },
  "include": [
    "src/**/*.ts",
    "config/**/*.ts"
  ]
}
